<Window
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   SizeToContent="WidthAndHeight"
   Title="NgineCompress">
    <StackPanel Margin="20, 20, 20, 20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Width="250" Source="https://www.skysignage.com/s/Ngine/common/img/sky_logo.png" />
    <Grid Margin="0, 50, 0, 0" Name="NgineGrid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
		<Label Content="Original Video Details" Grid.ColumnSpan="2" FontSize="24" Grid.Row="0" HorizontalAlignment="Center"/>
        <Button Name="iFile" FontSize="24" Grid.Column="0" Grid.Row="1" Margin="0,0,0,15">Browse Media</Button>
        <Button Name="deleteMedia" Grid.Column="1"  Grid.Row="1" Margin="0,0,0,15">
            <StackPanel>
                <Image Source="C:\Users\Antoine\Desktop\NgineCompress\trash.png" Height="48"/>
            </StackPanel>
        </Button>
        <TextBox Name="infoBox" IsReadOnly="true" Grid.Row="3" Grid.ColumnSpan="2" FontSize="16" Height="130" Text="The details about your MP4 video will be displayed inside this box" />

        <Label Content="Compressed Video Details" HorizontalAlignment="Center" FontSize="24" Margin="80,0,0,15" Grid.Row="0" Grid.Column="2" />
        <Button Name="eFile" FontSize="24" Grid.Column="2" Grid.Row="1" Margin="80,0,0,15">Export Media</Button>
        <TextBox Name="exportInfoBox" FontSize="16" IsReadOnly="true" Height="130" TextWrapping="Wrap" Margin="80,0,0,0" Grid.Column="2" Grid.Row="3" Text="The details about your compressed MP4 video will be displayed inside this box" />

	</Grid>

    </StackPanel>
</Window>